@page
@using System.Globalization
@inject IConferenceService conferenceService
@inject IConfiguration configuration
@{
    var slug = "sthlm-2025";
    var conference = conferenceService.Get(slug);
    if (conference == null)
        throw new Exception("Conference not found in database");

    var timeZone = TimeZoneInfo.FindSystemTimeZoneById("W. Europe Standard Time");
    var currentTime = DateTime.UtcNow;
    if (timeZone != null)
    {
        currentTime = TimeZoneInfo.ConvertTimeFromUtc(DateTime.UtcNow, timeZone);
    }

    bool conferenceOngoing = false;
    if (conference.Start.HasValue && conference.End.HasValue)
    {
        conferenceOngoing = currentTime > conference.Start.Value.Date &&
                            currentTime < conference.End.Value.Date.AddDays(1);
    }

    bool isCfpOpen = false; //New logic will be added on issue #178
    bool earlyBirdAvailable = false;

    int speakersLeft = conference.MinNumberOfSpeakers - conference.Speakers.Count;

    // Do we have forced open/close info for ticket sales?
    if (!bool.TryParse(configuration["Ticket_Sales_Force"], out bool ticketSalesOpen))
    {
        // No forced info. Let's see if we have an open date/time
        DateTime ticketsOpenDateTime;
        if (DateTime.TryParse(configuration["Ticket_Sales_Open_Date"],
            CultureInfo.InvariantCulture,
            DateTimeStyles.None, out ticketsOpenDateTime))
        {
            // Ticket sales should be open if the local conference time is greater than the date/time
            ticketSalesOpen = currentTime > ticketsOpenDateTime;
        }
    }

    var activeSections = new[] {
        ("previousLinks", true),
        ("sponsor", true),
        ("speakers", true),
        ("sessions", false),
        ("schedule", false),
        ("tickets", false),
        ("contact", true),
        ("members", false)
    }
    .Where(section => section.Item2)
    .Select((section, index) => (id: section.Item1, active: section.Item2))
    .ToDictionary(section => section.id);
}


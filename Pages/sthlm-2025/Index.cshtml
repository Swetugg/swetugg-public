                                                                }
                                                                @if (session != null)
                                                                {
                                                                    var sessionSpeakers = session.Speakers.ToList();
                                                                    if (sessionSpeakers.Count > 0)
                                                                    {
                                                                        if (@roomSlot.Start.HasValue)
                                                                        {
                                                                            <span class="schemacell-tid">@roomSlot.Start.Value.ToString("HH:mm") - @roomSlot.End.Value.ToString("HH:mm")</span>
                                                                        }
                                                                        var firstSpeaker = sessionSpeakers.First();
                                                                        <a href="/@slug/speakers/@firstSpeaker.Slug#@session.Slug">
                                                                            <div class="schemacell-rad1v2">
                                                                                @session.Name
                                                                            </div>
                                                                        </a>
                                                                        <div class="schemacell-rad2v2">
                                                                            @foreach (var speaker in sessionSpeakers)
                                                                            {
                                                                                <a href="/@slug/speakers/@speaker.Slug">@speaker.Name</a>
                                                                            }
                                                                        </div>
                                                                    }
                                                                    var tags = session.Tags;
                                                                    foreach (var tag in tags.Where(t => t.Featured))
                                                                    {
                                                                        <span class="label label-default" data-toggle="tooltip" data-placement="right" title="@tag.Description">@tag.Name</span>

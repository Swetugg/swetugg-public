    </script>

    <div class="page">
        <nav>
            <div class="container">
                <a href="/">@(conferenceService.GetCurrentConferenceMeta()?.Name ?? "Swetugg")</a>
            </div>
        </nav>

        @RenderBody()

        @*TODO: Make sure content is centered vertically in the footer *@
        <section id="footerRights" class="footer-rights-section">
            <div class="container">
                <div class="row">
                    <div class="col-sm-8">
                        <a href="https://www.meetup.com/Swenug-Goteborg/" target="blank"><img
                                src="/img/swenug.png" /></a>
                    </div>
                    <div class="col-sm-4">
                        <ul class="socialNetwork pull-right">
                            <li><a title="" class="tips" href="https://www.facebook.com/Swetugg"
                                    data-original-title="follow us on Facebook"><i
                                        class="icon-facebook-1 iconRounded"></i></a></li>
                            <li><a title="" class="tips" href="https://twitter.com/swetugg" target="_blank"
                                    data-original-title="follow us on Twitter"><i
                                        class="icon-twitter-bird iconRounded"></i></a></li>
                            <li><a title="" class="tips" href="#" data-original-title="follow us on Google+"><i
                                        class="icon-gplus-1 iconRounded"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </section>
    </div>


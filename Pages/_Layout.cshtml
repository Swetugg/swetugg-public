    <meta name="description" content="">
    <meta name="author" content="">

    @RenderSection("meta", false)

    <meta property="og:site_name" content="Swetugg" />
    <meta property="fb:app_id" content="@fbAppId" />

    <title>Swetugg - the .NET conference, by .NET developers, for .NET developers</title>

    <link rel="stylesheet" href="swetugg-public.styles.css">
    <link href="/style/swetugg.css" rel="stylesheet" asp-append-version="true">

